<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:id="@+id/chatting_title_name"
        android:textSize="@dimen/s_sub_big_text"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/accent_white"
        tools:text="龚云浩"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@+id/chatting_title_name"
        android:id="@+id/online_status"
        android:textSize="10sp"
        android:layout_centerInParent="true"
        android:textColor="@color/accent_white"
        android:text="Android 手机在线"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <ImageButton
        android:id="@+id/chatting_back"
        android:layout_margin="@dimen/big_corner"
        android:layout_centerVertical="true"
        android:background="@drawable/back"
        android:layout_width="28dp"
        android:layout_height="28dp" />

    <ImageButton
        android:id="@+id/user_detail"
        android:layout_marginRight="8dp"
        android:background="@drawable/user"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_width="26dp"
        android:layout_height="26dp" />

</RelativeLayout>