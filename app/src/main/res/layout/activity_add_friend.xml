<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.AddFriendActivity">

    <include layout="@layout/title_chatting"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/fab_margin"
        android:text="你需要发送验证申请，等待对方通过"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/et_add_friend_reason"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="@dimen/fab_margin"
        android:background="@drawable/shape_cavity"
        android:padding="@dimen/corner"
        android:text="我是"
        android:gravity="start"
        />

    <Button
        android:id="@+id/btn_send_add_friend_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:text="发送"
        android:background="@drawable/shape_fill_blue"
        android:textColor="@color/accent_white"/>

</LinearLayout>