<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp">

    <LinearLayout
        android:id="@+id/linearlayout_picture"
        android:layout_marginLeft="15dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:text="好友申请"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <org.raphets.roundimageview.RoundImageView
            android:layout_marginTop="5dp"
            android:id="@+id/user_picture"
            android:layout_alignParentBottom="true"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/head5"/>

    </LinearLayout>

    <LinearLayout
        android:layout_toRightOf="@+id/linearlayout_picture"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp">

        <TextView
            android:id="@+id/name"
            android:text="-messi-"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:textColor="@color/accent_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/words"
            android:textColor="@color/accent_black"
            android:layout_marginTop="5dp"
            android:text="请求加为好友"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/fromWhere"
            android:layout_marginTop="5dp"
            android:text="来源：QQ群"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:background="#d4d2d2"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="100dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <Button
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="10dp"
        android:text="同意"
        android:textColor="#585757"
        android:background="@drawable/agree"
        android:layout_width="60dp"
        android:layout_height="30dp" />

</RelativeLayout>