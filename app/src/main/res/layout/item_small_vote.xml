<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/big_corner"
    android:layout_margin="@dimen/big_corner">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_vote_small_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:minLines="2"
            android:text="投票选择你喜欢的天气"
            android:textColor="@color/accent_black"
            android:textSize="15sp"
            android:padding="@dimen/corner"/>

        <TextView
            android:id="@+id/tv_item_vote_small_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:paddingLeft="12dp"
            android:text="2018-04-08 20:30"/>

        <TextView
            android:id="@+id/tv_item_vote_small_organizer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:paddingLeft="12dp"
            android:paddingTop="@dimen/corner"
        android:text="发起者：龚云浩"/>

    </LinearLayout>

</android.support.v7.widget.CardView>