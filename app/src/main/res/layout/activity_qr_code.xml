<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/title_chatting"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

    <Button
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#7a85ff"
        android:textColor="@color/accent_white"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/sub_medium_spacing"
        android:id="@+id/button_save_qr_code"
        android:text="保存到手机"/>

    <Button
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textColor="@color/accent_white"
        android:layout_margin="@dimen/sub_medium_spacing"
        android:id="@+id/button_share_qr_code"
        android:text="分享二维码"/>

</LinearLayout>
    <ImageView
        android:id="@+id/iv_qr_detail"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:layout_centerInParent="true"/>
</RelativeLayout>
